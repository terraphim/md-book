<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page.title }}</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.12.0/cdn/themes/light.css" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.12.0/cdn/shoelace-autoloader.js"></script>
    <script src="/components/doc-sidebar.js" type="module"></script>
    <script src="/components/doc-toc.js" type="module"></script>
</head>
<body>
    <div class="container">
        <doc-sidebar>
            <ul class="nav-groups">
                {% for section in sections %}
                <li class="nav-group">
                    <div class="nav-group-title">{{ section.title }}</div>
                    <ul>
                        {% for page in section.pages %}
                        <li>
                            <a href="{{ page.path | safe }}" {% if current_path == page.path %}class="active"{% endif %}>
                                {{ page.title }}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </li>
                {% endfor %}
            </ul>
        </doc-sidebar>

        <main class="content">
            <article class="main-article">
                <h1>{{ page.title }}</h1>
                {{ content | safe }}
                <div class="nav-footer">
                    {% if previous %}
                    <a href="{{ previous.path | safe }}" class="nav-previous">← {{ previous.title }}</a>
                    {% endif %}
                    {% if next %}
                    <a href="{{ next.path | safe }}" class="nav-next">{{ next.title }} →</a>
                    {% endif %}
                </div>
            </article>
        </main>

        <doc-toc>
            {% if toc %}
            <ul>
                {% for h1 in toc %}
                <li>
                    <a href="#{{ h1.id | safe }}">{{ h1.title }}</a>
                    {% if h1.children %}
                    <ul>
                        {% for h2 in h1.children %}
                        <li><a href="#{{ h2.id | safe }}">{{ h2.title }}</a></li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        </doc-toc>
    </div>
</body>
</html> 