{
  "name": "md-book-frontend-tests",
  "version": "1.0.0",
  "description": "Frontend tests for md-book search functionality",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/environment-jsdom": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/frontend/**/*.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/frontend/setup.js"],
    "moduleNameMapper": {
      "^/js/(.*)$": "<rootDir>/src/templates/js/$1",
      "^/components/(.*)$": "<rootDir>/src/templates/components/$1"
    }
  }
}